{
  "name": "JSON-Tool",
  "description": "A JSON formatting tool.",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:edge": "wxt -b edge",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --mv3 -b firefox",
    "build:edge": "wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --mv3 -b firefox",
    "zip:edge": "wxt zip -b edge",
    "compile": "vue-tsc --noEmit",
    "postinstall": "wxt prepare",
    "dev:docs": "vitepress dev docs --port 28181",
    "build:docs": "vitepress build docs",
    "preview:docs": "vitepress preview docs",
    "dev:web": "vite dev -c vite.config.web.ts --host 0.0.0.0",
    "build:web": "vite build -c vite.config.web.ts"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "vue": "^3.5.12",
    "vue-clipboard3": "^2.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@wxt-dev/module-vue": "^1.0.1",
    "naive-ui": "^2.41.0",
    "typescript": "5.6.3",
    "vite": "^6.2.3",
    "vite-plugin-static-copy": "^2.3.0",
    "vitepress": "^1.6.3",
    "vue-tsc": "^2.1.10",
    "wxt": "^0.20.0"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
